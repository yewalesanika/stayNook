<% layout("/layouts/boilerPlate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on StayNook</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class=" needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>

            <button class="btn btn-dark">SignUp</button>
        </form>
        <a href="/listings"><button class="btn btn-dark mt-3 mb-3">Back</button></a>
    </div>
</div>