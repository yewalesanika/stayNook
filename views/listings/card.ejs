<% layout("/layouts/boilerPlate.ejs") %>
<a href="/listings/<%=listing._id%>/book"><button class="backbtn col-6 offset-4 mt-3"><i class="fa-solid fa-arrow-left"></i></button></a>
    <form action="/listings/<%=listing._id%>/book/<%=booking._id%>/card" method="POST" novalidate class=" needs-validation">
        <div class="container d-flex justify-content-center main">
            <div class="cardPayment">
                <div class="d-flex justify-content-between px-3 pt-4">
                    <span class="pay">
                        Pay Amount
                    </span>
                    <div class="amount">
                        <div class="inner">
                            <span class="rupee">&#8377;</span>
                            <span class="total"><%=totalPrice.toLocaleString("en-IN")%></span>
                        </div>
                    </div>
                </div>
                <div class="px-3 pt-3">
                    <label for="cardNumber" class="d-flex justify-content-between">
                        <span class="labeltxt">Card Number</span>
                        <img src="/image/card_img.png" width="150" alt="" class="mb-1">
                    </label>
                    <input type="text" name="card[cardNumber]" class="form-control inputtxt" placeholder="2341 4365 8964 1604" required>
                    <div class="invalid-feedback">
                        Card number must be exactly 16 digits
                    </div>
                </div>
                <div class="d-flex justify-content-between px-3 pt-4">
                    <div>
                        <label for="data" class="expiry">Expiry</label>
                        <input type="text" name="card[expiryDate]" class="form-control expiry" placeholder="MM/YY" required>
                        <div class="invalid-feedback">
                            Expiry date must be in the format MM/YY
                        </div>
                    </div>
                    <div>
                        <label for="cvv" class="cvvtxt">Cvv</label>
                        <input type="text" name="card[cvv]" class="form-control cvv" placeholder="432" required>
                        <div class="invalid-feedback">
                            CVV must be exactly 3 digits
                        </div>
                    </div>
                </div>
                <div class="d-flex align-content-center justify-content-between px-3 py-4">
                    <div>
                        <button class="btn btn-dark">Pay</button>
                    </div>
                </div>
            </div>
        </div>
    </form>